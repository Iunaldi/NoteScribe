{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "swift-build",
            "type": "shell",
            "command": "swift build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run NoteScribe",
            "type": "process",
            "command": "${workspaceFolder}/.build/debug/NoteScribe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}